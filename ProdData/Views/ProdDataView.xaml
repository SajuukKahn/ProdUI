<UserControl x:Class="ProdData.Views.ProdDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProdData.Views"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Background="LightGray"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Telerik.Windows.Controls;component/Themes/FontResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <telerik:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <telerik:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Border BorderBrush="#333"
                    BorderThickness="2"
                    Margin="2"
                    Padding="3">

                <UniformGrid VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             Columns="2">
                    <telerik:Label Content="Selected Program: "/>
                    <telerik:RadMultiColumnComboBox VerticalAlignment="Center"
                                                    DisplayMemberPath="ProgramName"
                                                    DropDownMinWidth="650"
                                                    KeepDropDownOpen="False"
                                                    SelectionMode="Single"
                                                    OpenDropDownOnInput="True"
                                                    telerik:DropDownExtensions.HandleMouseWheelWhenOpen="True"
                                                    telerik:DropDownButtonExtensions.FocusContentOnOpen="True"
                                                    CloseDropDownAfterSelectionInput="True">
                        <telerik:RadMultiColumnComboBox.ItemsSourceProvider>
                            <telerik:GridViewItemsSourceProvider ItemsSource="{Binding ProductionPrograms}"
                                                                 ShowColumnFooters="False"
                                                                 telerik:WindowHeaderPanel.ContainerType="Buttons">
                            </telerik:GridViewItemsSourceProvider>
                        </telerik:RadMultiColumnComboBox.ItemsSourceProvider>

                    </telerik:RadMultiColumnComboBox>

                    <telerik:Label Content="Cycle Count:"/>
                    <telerik:Label Content="{Binding CycleCount}"/>

                    <telerik:Label Content="Program Step:"/>
                    <StackPanel Orientation="Horizontal">
                        <telerik:Label Content="{Binding ProgramStep}"/>
                        <telerik:Label Content=" / "/>
                        <telerik:Label Content="{Binding ProgramSize}"/>
                    </StackPanel>

                    <telerik:Label Content="Cycle Time:"/>
                    <telerik:Label Content="{Binding CycleTime.ElapsedTime}"/>

                </UniformGrid>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                        Visibility="{Binding ProgramSelectionConfirmationRaised, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                <telerik:RadPathButton x:Name="PlayButton"
                                       Command="{Binding PlayButton}"
                                       PathGeometry="{telerik:RadGlyph Type=None, Glyph={StaticResource GlyphPlay}, Size=24}"
                                       Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       Width="65"
                                       Height="65"/>

                <telerik:RadPathButton x:Name="PauseButton"
                                       Command="{Binding PauseButton}"
                                       PathGeometry="{telerik:RadGlyph Type=Path, Glyph={StaticResource GlyphPause}, Size=24}"
                                       Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       Width="65"
                                       Height="65"/>
            </StackPanel>


            <Grid Visibility="{Binding ProgramSelectionConfirmationRaised,Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <telerik:Label x:Name="WarningLabel"
                               Content="Confirm Program Change" 
                               HorizontalAlignment="Center"/>
                    <telerik:Label  Content="Terminate current program?"
                            HorizontalAlignment="Center"/>


                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                        <telerik:RadPathButton x:Name="CancelButton"
                                               Margin="3"
                                               Command="{Binding CancelButton}">
                        <StackPanel Orientation="Horizontal">
                            <telerik:Label Content="Cancel"/>
                                <telerik:RadGlyph Glyph="{StaticResource GlyphClose}"/>
                            </StackPanel>

                    </telerik:RadPathButton>


                <telerik:RadPathButton x:Name="ConfirmButton"
                                       Margin="3"
                                       Command="{Binding ConfirmButton}">
                        <StackPanel Orientation="Horizontal">
                            <telerik:Label Content="Confirm"/>
                            <telerik:RadGlyph Glyph="{StaticResource GlyphCheck}"/>
                        </StackPanel>

                    </telerik:RadPathButton>
                    </StackPanel>
                </StackPanel>

        </Grid>
        <Viewbox Grid.Column="1"
                 Stretch="Uniform"
                 StretchDirection="DownOnly">
            <Image Source="{Binding ProcessDisplay}"
                   Margin="5"/>
        </Viewbox>



        </StackPanel>


    </Grid>
</UserControl>
