                    </MultiDataTrigger>
                </DataTemplate.Triggers>-->
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="ControlGridLayout">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <DockPanel LastChildFill="True">
            <StackPanel>
                <Border Margin="2"
                        Padding="3"
                        BorderBrush="#333"
                        BorderThickness="2"
                        DockPanel.Dock="Left">

                    <UniformGrid HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Columns="2">
                        <telerik:Label Content="Selected Program: " />

                        <Button Command="{Binding OpenProgramSelect}" Content="{Binding SelectedProgramData.ProgramName}" />
