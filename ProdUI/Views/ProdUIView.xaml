<Window x:Class="ProdUI.Views.ProdUIView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ProdUI.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Title="ProdUIShell"
        Width="800"
        Height="550"
        mc:Ignorable="d">

    <Grid>
        <telerik:RadDocking>
            <telerik:RadSplitContainer>
                <telerik:RadPaneGroup>
                    <telerik:RadPane CanFloat="True" Header="Test Controls">
                        <ContentControl prism:RegionManager.RegionName="TestRegion" />
                    </telerik:RadPane>
                </telerik:RadPaneGroup>
            </telerik:RadSplitContainer>
        </telerik:RadDocking>
        <Border BorderBrush="Black" BorderThickness="1">
            <ContentControl prism:RegionManager.RegionName="ProdDataRegion" />
        </Border>
    </Grid>
</Window>