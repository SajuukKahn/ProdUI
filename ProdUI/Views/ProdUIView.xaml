<Window x:Class="ProdUI.Views.ProdUIView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdUI.Views"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="ProdUIShell" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ContentControl Grid.Column ="0"
                            prism:RegionManager.RegionName="ProdDataRegion" />

            <ContentControl Grid.Column ="1"
                            prism:RegionManager.RegionName="ProdImageRegion" />


        </Grid>
        
        <ContentControl Grid.Row ="1" 
                        prism:RegionManager.RegionName="ProdCardsRegion" />
    </Grid>
    
</Window>
