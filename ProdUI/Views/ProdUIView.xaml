<Window x:Class="ProdUI.Views.ProdUIView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:constants="clr-namespace:ProdUI.Constants"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        Title="ProdUIShell"
        Width="987"
        Height="610"
        mc:Ignorable="d">

    <Grid>
        <ContentControl prism:RegionManager.RegionName="{x:Static constants:ShellRegionNames.ShellProdDataRegion}" />

        <ContentControl Panel.ZIndex="998" prism:RegionManager.RegionName="{x:Static constants:ShellRegionNames.ShellProgramSelectRegion}" />

        <ContentControl Panel.ZIndex="999" prism:RegionManager.RegionName="{x:Static constants:ShellRegionNames.ShellProdModalRegion}" />

        <Popup AllowsTransparency="False"
               Focusable="True"
               IsOpen="True"
               Placement="Absolute"
               PlacementRectangle="0,0,0,0"
               PopupAnimation="Scroll"
               StaysOpen="True">
            <ContentControl prism:RegionManager.RegionName="{x:Static constants:ShellRegionNames.ShellProdTestRegion}" />
        </Popup>

    </Grid>
</Window>